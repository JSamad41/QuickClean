@model QuickClean.Models.User
@{
	ViewBag.Title = "Index";
}
<h2>Property Owner Profile Information</h2>

<style>
</style>

@if (!Model.IsAuthenticated) {
	@Html.Partial("NotAuthenticated")
}
else {
	@Html.Partial("UserTabMenu")
	using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" })) {
		<p>To make changes to your profile enter your information below and click the Update button.</p>

		<div style="font-weight:bold">Account Type:</div>
		<div class="section">
			<div class="item">
				<div>@Html.RadioButtonFor(model => model.Role, "owner", new { @value = "owner", @name = "Role", @checked = "checked" })@Html.LabelFor(model => model.Role, "Property Owner")</div>
			</div>
			<div class="item">
				<div>@Html.RadioButtonFor(model => model.Role, "cleaner", new { @value = "cleaner", @name = "Role" })@Html.LabelFor(model => model.Role, "Cleaning Professional")</div>
			</div>
		</div>

		<div id="user-profile-data">
			<div class="section">
				<div class="item">
					<div>@Html.LabelFor(model => model.FirstName)</div>
					<div>@Html.TextBoxFor(model => model.FirstName, new { @style = "border-radius: 8px;", @autofocus = "autofocus" })</div>
				</div>
				<div class="item">
					<div>@Html.LabelFor(model => model.LastName)</div>
					<div>@Html.TextBoxFor(model => model.LastName, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.Address)</div>
					<div>@Html.TextBoxFor(model => model.Address, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.City)</div>
					<div>@Html.TextBoxFor(model => model.City, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.State)</div>
					<div>@Html.TextBoxFor(model => model.State, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.Zip)</div>
					<div>@Html.TextBoxFor(model => model.Zip, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.PhoneNumber)</div>
					<div>@Html.TextBoxFor(model => model.PhoneNumber, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div>
					<div>@Html.LabelFor(model => model.Email)</div>
					<div>@Html.TextBoxFor(model => model.Email, new { @style = "border-radius: 8px;" })</div>
				</div>
			</div>
			<div class="section">
				<div class="item">
					<div>@Html.LabelFor(model => model.UserID)</div>
					<div>@Html.TextBoxFor(model => model.UserID, new { @style = "border-radius: 8px;" })</div>
				</div>
				<div class="item">
					<div>@Html.LabelFor(model => model.Password)</div>
					<div>@Html.TextBoxFor(model => model.Password, new { @style = "border-radius: 8px;", type = "password" })</div>
				</div>
			</div>
			<div class="section">
				<button style="border-radius: 12px;" class="button-action" id="btnUpdate" name="btnSubmit" value="update"><i class='far fa-save'></i> Update</button>
			</div>
		</div>
	}
}

<script>
	$(document).ready(function () {
		SetActiveMenus('profile', 'index');
	});
</script>
