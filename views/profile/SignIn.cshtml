


@model web2.Models.User
@{
    ViewBag.Title = "Sign-In";
}

<style>
    
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }
  body{
    margin: 0;
    padding: 0;
    background: linear-gradient(120deg, #51F8AF, #AF51F8);;
    height: 100vh;
    overflow: hidden;
  }
  .center{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    background: white;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0,0,0,0.05);
  }
  .center h1{
    text-align: center;
    padding: 20px 0;
    border-bottom: 1px solid silver;
  }
  .center form{
    padding: 0 40px;
    box-sizing: border-box;
  }
  form .txt_field{
    position: relative;
    border-bottom: 2px solid #adadad;
    margin: 30px 0;
  }
  .txt_field input{
    width: 100%;
    padding: 0 5px;
    height: 40px;
    font-size: 16px;
    border: none;
    background: none;
    outline: none;
  }
  .txt_field label{
    position: absolute;
    top: 50%;
    left: 5px;
    color: #adadad;
    transform: translateY(-50%);
    font-size: 16px;
    pointer-properties: none;
    transition: .5s;
  }
  .txt_field span::before{
    content: '';
    position: absolute;
    top: 40px;
    left: 0;
    width: 0%;
    height: 2px;
    background: #AF51F8;
    transition: .5s;
  }
  .txt_field input:focus ~ label,
  .txt_field input:valid ~ label{
    top: -5px;
    color: #AF51F8;
  }
  .txt_field input:focus ~ span::before,
  .txt_field input:valid ~ span::before{
    width: 100%;
  }
  .pass{
    margin: -5px 0 20px 5px;
    color: #a6a6a6;
    cursor: pointer;
  }
  .pass:hover{
    text-decoration: underline;
  }
  button[type="submit"]{
    width: 100%;
    height: 50px;
    border: 1px solid;
    background: #AF51F8;
    border-radius: 25px;
    font-size: 18px;
    color: #e9f4fb;
    font-weight: 700;
    cursor: pointer;
    outline: none;
  }
  button[type="submit"]:hover{
    border-color: #AF51F8;
    transition: .5s;
  }
  .signup_link{
    margin: 30px 0;
    text-align: center;
    font-size: 16px;
    color: #666666;
  }
  .signup_link a{
    color: #AF51F8;
    text-decoration: none;
  }
  .signup_link a:hover{
    text-decoration: underline;
  }
</style>

@using (Html.BeginForm(FormMethod.Post))
{

    if (Model.ActionType == web2.Models.User.ActionTypes.RequiredFieldsMissing)
    {
        <div id="content-locked">
            <i class="fad fa-exclamation-triangle fa-2x"></i>
            <span>All fields are required.</span>
        </div>
    }

    if (Model.ActionType == web2.Models.User.ActionTypes.LoginFailed)
    {
        <div id="content-locked">
            <i class="fad fa-exclamation-triangle fa-2x"></i>
            <span>Invalid UserID and/or Password. Please try again.</span>
        </div>
    }

<div class="center">
    <h1>Login</h1>
    <div class="section">
        <div class="item">
            <div class="txt_field">
                <div>@Html.LabelFor(model => model.UserID)</div>
                <div>@Html.TextBoxFor(model => model.UserID, new { @autofocus = "autofocus" })</div>
                <span></span>
            </div>
        </div>
        <div class="item">
            <div class="txt_field">
                <div>@Html.LabelFor(model => model.Password)</div>
                <div>@Html.TextBoxFor(model => model.Password, new { type = "password" })</div>
                <span></span>
            </div>
        </div>
        <div>
            <button type="submit" id="btnSignIn" name="btnSubmit" value="signin"> Sign-In</button>
        </div>
        <div class="signup_link">
            Not a member? <a href="~/Profile/SignUp">SignUp</a>
        </div>
    </div>
</div>
}
<script>
    $(document).ready(function () {
        SetActiveMenus('signin');
    });
</script>
